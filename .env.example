# =============================================================================
# NextAuth.js Configuration
# =============================================================================

# The base URL of your application (used for OAuth callbacks)
NEXTAUTH_URL="http://localhost:3000"

# Secret key for NextAuth.js (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-generated-secret-key-here"

# =============================================================================
# Google OAuth Configuration
# =============================================================================

# Google OAuth Client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"

# Google OAuth Client Secret (from Google Cloud Console)
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/freebox"

# =============================================================================
# Cloudinary Configuration (for image uploads)
# =============================================================================

# Cloudinary Cloud Name (from your Cloudinary dashboard)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Cloudinary API Key (from your Cloudinary dashboard)
CLOUDINARY_API_KEY="your-api-key"

# Cloudinary API Secret (from your Cloudinary dashboard)
CLOUDINARY_API_SECRET="your-api-secret"

# =============================================================================
# Optional: Development/Production Configuration
# =============================================================================

# Node environment (development, production, test)
# NODE_ENV="development"
